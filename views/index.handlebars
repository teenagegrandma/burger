<div class="row">
    <center>
        <!-- left side to eat burger -->
        <div class="col-md-6">
            <h4 class="red_font">Ready to eat!</h4>
            <div id="ready_to_eat">

                <!--insert ready burgers here-->
                {{#each burgers}}
                    {{#unless devoured}}
                    <form action="burger/eat/{{id}}" method="POST">
                        <div class="input-group">
                            <li class="form-control">{{id}}, {{burger_name}}</li>
                                <span class="input-group-btn">
                                    <button class="btn btn-success devour-button" type="submit">Devour It!</button>
                                </span>
                        </div>
                    </form>
                    {{/unless}}
                {{/each}}

            </div>
        </div>

        <!--right side (the eaten burger) -->
        <div class="col-md-6">
            <h4 class="red_font">Already eaten!</h4>
            <div id="already_eaten">

                <!--insert eaten burgers here-->
                {{#each burgers}}
                    {{#if this.devoured}}
                        <div class="input-group">
                            <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
                            <span class="input-group-btn">
                                <button class="btn btn-info delete-button" type="button">Delete!</button>
                            </span>
                        </div>
                    {{/if}}
                {{/each}}

            </div>
        </div>
    </center>
</div>

                            